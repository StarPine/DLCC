<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">
        <LinearLayout
            binding:drawable_color="@{@color/white}"
            binding:drawable_cornersRadius="@{10}"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:orientation="vertical"
            android:paddingBottom="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:text="@string/playcc_phone_cover_text"
                android:textColor="#ff2f2f4d"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/playcc_photo_cover_content_text"
                android:textColor="#ff333333"
                android:textSize="14sp"
                android:lineHeight="20dp"
                tools:ignore="UnusedAttribute" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_confirm"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_purple_background"
                android:layout_marginStart="38dp"
                android:layout_marginEnd="38dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/playcc_roger"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

</layout>