<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="160dp">

    <com.fine.friendlycc.widget.roundedimageview.RoundedImageView
        android:id="@+id/round_image_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_placeholder_img"
        app:riv_corner_radius="15dip" />

    <ImageView
        android:id="@+id/iv_burn_tag"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/photo_mark_red_left_big"
        android:src="@drawable/ic_hot" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/round_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/playfun_burn_photo"
        android:textColor="@color/red_7c"
        android:textSize="@dimen/text_size_big" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/round_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/playfun_click_check"
        android:textColor="@color/gray_middle"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/tv_burned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/round_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/playfun_burned"
        android:textColor="@color/gray_middle"
        android:textSize="@dimen/text_size_middle" />
</RelativeLayout>
