<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.graphics.drawable.GradientDrawable" />
    </data>

    <RelativeLayout
        binding:drawable_radius_leftTop="@{19}"
        binding:drawable_radius_rightTop="@{19}"
        binding:drawable_color="@{@color/white}"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_marginTop="19dp"
            android:layout_marginStart="14dp"
            android:layout_width="match_parent"
            android:layout_height="34dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_logo"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/img_diamond_photo"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_logo"
                android:includeFontPadding="false"
                android:text="@string/playfun_text_set_unlock_price"
                android:textColor="@color/toolbar_title_color"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_btn"
                android:layout_width="58dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:gravity="center"
                android:text="@string/playfun_confirm"
                android:textColor="@color/white"
                android:textSize="13sp"
                binding:drawable_orientation="@{GradientDrawable.Orientation.LEFT_RIGHT}"
                binding:drawable_cornersRadius="@{12}"
                binding:drawable_gradient_endColor="@{@color/playfun_shape_radius_end_color}"
                binding:drawable_gradient_startColor="@{@color/playfun_shape_radius_start_color}" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_layout_coin"
            android:layout_below="@+id/rl_layout"
            android:layout_marginStart="14dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_coin"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_coin"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="200"
                android:textColor="#ffff1579"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/rl_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/icon_bigger_crystal2"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_money"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="200"
                android:textColor="#ffff1579"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_layout_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_layout_coin">

            <com.fine.friendlycc.widget.custom.PCustomSeekbar2
                android:id="@+id/seekbar_photo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:imgSpotHeight="9dp"
                app:imgSpotOffSrc="@drawable/pseekbar_spot_off"
                app:imgSpotOnHeight="9dp"
                app:imgSpotOnSrc="@drawable/pseekbar_spot"
                app:imgSpotOnWidth="9dp"
                app:imgSpotSrc="@drawable/pseekbar_spot_on"
                app:imgSpotWidth="9dp"
                app:imgThumbHeight="17dp"
                app:imgThumbWidth="17dp"
                app:thumbSrc="@drawable/pseekbar_thumb" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekbar_photo_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="28dp"
                android:max="0"
                android:progress="0"
                android:progressDrawable="@color/transparent"
                android:thumb="@drawable/pseekbar_thumb" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/snapshot_layout"
            android:layout_marginTop="17dp"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/rl_layout_setting"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/snapshot_checkbox"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:drawableStart="@drawable/snapshot_checkbox_selectors"
                tools:ignore="TouchTargetSizeCheck" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/playfun_phono_setting_reading_burn"
                android:textColor="@color/text_9EA1B0"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>
</layout>