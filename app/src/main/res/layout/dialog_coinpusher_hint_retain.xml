<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            binding:drawable_color="@{@color/white}"
            binding:drawable_cornersRadius="@{15}"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="30dp"
                android:includeFontPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/playfun_dialog_title_prompt"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/playfun_coinpusher_hint_retain2"
                android:textColor="@color/gray_middle"
                android:lineHeight="21dp"
                android:textSize="14sp"
                tools:ignore="UnusedAttribute" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sub"
                android:layout_width="match_parent"
                android:background="@drawable/img_coinpusher_btn"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:gravity="center"
                android:text="@string/playfun_confirm"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cancel"
                binding:drawable_color="@{@color/white}"
                binding:drawable_cornersRadius="@{23}"
                binding:drawable_stroke_width="@{1}"
                binding:drawable_stroke_color="@{@color/black}"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="@string/playfun_cancel"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </LinearLayout>

    </FrameLayout>
</layout>