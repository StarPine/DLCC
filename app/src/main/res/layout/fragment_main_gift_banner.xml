<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_banner_gift"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >
    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_main_gift_banner"
        >
        <com.opensource.svgaplayer.SVGAImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoPlay="true"
            app:source="broadcast2.svga" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.fine.friendlycc.widget.image.CircleImageView
                android:id="@+id/left_user_img"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_address_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingEnd="4dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left_user_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="用户昵称+++++++++++++++++"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_middle" />

                <ImageView
                    android:id="@+id/left_user_icon"
                    android:layout_width="30dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_vip" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gift_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="送出[一见钟情]" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_gift"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_gift_df" />

                <ImageView
                    android:id="@+id/gift_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_gift_num520" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.fine.friendlycc.widget.image.CircleImageView
                android:id="@+id/right_user_img"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_address_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:paddingLeft="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/right_user_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="用户昵称++++++++++++++"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_middle" />

                <ImageView
                    android:id="@+id/right_user_icon"
                    android:layout_width="30dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_vip" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>