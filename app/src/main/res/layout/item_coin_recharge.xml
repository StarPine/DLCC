<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view"
    android:layout_width="158dp"
    android:layout_height="192dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginTop="14dp">

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="115dp"
        android:layout_height="22dp"
        android:layout_marginStart="22dp"
        android:background="@drawable/coin_recharge_img_custom_title"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/good_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="11sp"
            tools:text="限時5折優惠" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/coin_recharge_img_custom_backop"
        android:orientation="vertical">

        <TextView
            android:id="@+id/good_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="12600"
            android:textColor="#ffffffff"
            android:textSize="38sp" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="86dp"
            android:layout_height="67dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/coin_recharge_img_item_2" />

        <LinearLayout
            android:id="@+id/btn_sub"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/coin_recharge_img_btn"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                tools:visibility="gone"
                android:id="@+id/is_first"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/coin_recharge_img_item_3" />

            <TextView
                android:id="@+id/good_name"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="NT$390.00"
                android:textColor="#fff1f2f9"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>