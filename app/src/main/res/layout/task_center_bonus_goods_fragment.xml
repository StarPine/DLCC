<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.dl.playfun.R" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.dl.playfun.ui.task.bonus.TaskBonusItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5.5dp"
        android:layout_marginEnd="5.5dp"
        android:layout_marginBottom="10dp"
        binding:drawable_color="@{@color/white}"
        binding:drawable_cornersRadius="@{10}"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            binding:imageErrorPlaceholderRes="@{R.drawable.bonus_goods_default}"
            binding:imagePlaceholderRes="@{R.drawable.bonus_goods_default}"
            binding:imageThumbPath="@{viewModel.itemEntity.img}"
            tools:background="@drawable/bonus_goods_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:text="@{viewModel.itemEntity.title}"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentLeft="true"
            android:text="@{viewModel.getMoneyText()}"
            android:textColor="#fffbb11b"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:background="@drawable/button_purple_background"
            android:layout_width="132dp"
            android:layout_height="29dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:text="@string/task_fragment_bonus_detail_btn"
            android:textColor="@color/white"
            android:textSize="12sp"
            binding:onClickCommand="@{viewModel.subGoodsCommand}" />
    </LinearLayout>
</layout>