<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.blankj.utilcode.util.StringUtils" />

        <variable
            name="viewModel"
            type="com.dl.playfun.ui.userdetail.detail.UserDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_bottom_nav_height"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_navigation_backgroup_user_detail"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="@{viewModel.detailEntity.sex == null ? View.GONE:View.VISIBLE}">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.dl.playfun.widget.DrawableCenterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_toolbar_evaluate"
                android:gravity="center_vertical"
                android:textColor="@drawable/user_detail_bottom_text_color"
                android:textSize="13sp"
                binding:onClickCommand="@{viewModel.evaluateOnClickCommand}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.dl.playfun.widget.DrawableCenterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@{viewModel.detailEntity.isAccost == 0?@drawable/ic_user_detail_accost:@drawable/ic_user_detail_send_message}"
                android:gravity="center_vertical"
                android:textColor="@drawable/user_detail_bottom_text_color"
                android:textSize="13sp"
                binding:onClickCommand="@{viewModel.chatOnClickCommand}"
                tools:drawableStart="@drawable/ic_user_detail_accost"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <com.dl.playfun.widget.DrawableCenterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_user_detail_audio"
                android:textColor="@drawable/user_detail_bottom_text_color"
                android:textSize="13sp"
                binding:onClickCommand="@{viewModel.connMicOnClickCommand}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <com.dl.playfun.widget.DrawableCenterTextView
                android:id="@+id/dt_social_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_user_detail_video"
                android:gravity="center_vertical"
                android:textColor="@drawable/user_detail_bottom_text_color"
                android:textSize="13sp"
                binding:onClickCommand="@{viewModel.socialAccountOnClickCommand}" />

        </LinearLayout>


    </LinearLayout>
</layout>
