<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chat_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/playfun_top_chat"
                android:textColor="@color/text_default"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_del_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_dividing_line_bg"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/playfun_delet_chat"
                android:textColor="@color/text_default"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_del_banned_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_dividing_line_bg"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/playfun_delet_banned_account"
                android:textColor="@color/text_default"
                android:textSize="18sp"
                android:visibility="gone" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>