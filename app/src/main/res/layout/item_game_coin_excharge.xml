<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="11dp"
    android:paddingBottom="11dp">

    <ImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/icon_jm_coin"
        android:layout_marginLeft="17dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_jm_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#2F2F4D"
        android:layout_marginLeft="48dp"
        android:text="1000"
        />

    <ImageView
        android:id="@+id/img_game_coin"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/icon_game_coin"
        android:layout_marginLeft="180dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_game_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#2F2F4D"
        android:layout_marginLeft="211dp"
        android:text="1000"
        />

</RelativeLayout>