<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="#F1EEFC">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14.67dp"
                        android:text="@string/playfun_dialog_coin_pay"
                        android:textColor="@color/purple"
                        android:textSize="15.37sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_balance"
                        android:text="@string/playfun_dialog_coin_usable_balance"
                        android:textColor="@color/gray_light"
                        android:textSize="12.57sp" />

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/iv_divider"
                        android:text="0ä¸ª"
                        android:textColor="@color/purple"
                        android:textSize="12.57sp" />

                    <ImageView
                        android:id="@+id/iv_divider"
                        android:layout_width="1dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_refresh"
                        android:src="@color/divider" />

                    <ImageView
                        android:id="@+id/iv_refresh"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_refresh" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_pay_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/playfun_dialog_coin_pay_project_name"
                        android:textColor="@color/gray_middle"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/tv_pay_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_pay_name_title"
                        android:layout_marginTop="5dp"
                        android:text="@string/playfun_dialog_coin_pay_project"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/tv_pay_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_pay_name"
                        android:layout_marginTop="20dp"
                        android:text="@string/playfun_dialog_coin_pay_number"
                        android:textColor="@color/gray_middle"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/tv_pay_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_pay_price_title"
                        android:layout_toLeftOf="@+id/tv_price_unit"
                        android:text=""
                        android:textColor="@color/purple"
                        android:textSize="32sp"
                        tools:text="150"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_alignBaseline="@+id/tv_pay_price"
                        android:layout_alignParentRight="true"
                        android:text="@string/playfun_element"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_big" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_recharge"
                        style="@style/ButtonSecondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:layout_weight="1"
                        android:text="@string/playfun_dialong_coin_rechaege_top_up" />

                    <Button
                        android:id="@+id/btn_pay"
                        style="@style/ButtonPrimary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.5"
                        android:text="@string/playfun_confirm_pay" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:visibility="gone">

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>