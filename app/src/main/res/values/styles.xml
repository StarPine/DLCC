    <!--PictureSeletor Style 白色主题样式，，注意每一项都不能少-->
    <style name="picture_white_style_custom" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">true</item>
<!--        返回键图标-->
        <item name="picture.leftBack.icon">@drawable/ic_toolbar_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/ic_arrow_up_purple</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/ic_arrow_down_black</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/gray_dark</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/purple</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/picture_checkbox_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">true</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/container_background</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/purple</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/purple</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/picture_num_oval</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/white</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/gray_dark</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/purple
        </item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/container_background</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/ic_toolbar_back</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/white</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/white</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/gray_dark</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/picture_orange_oval</item>
    </style>

